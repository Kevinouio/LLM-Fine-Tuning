{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PaperDigest",
  "type": "object",
  "required": [
    "paper_type",
    "title",
    "abstract",
    "contributions",
    "limitations",
    "summary_simple",
    "quality_summary",
    "quality_scores",
    "quality_flags"
  ],
  "properties": {
    "paper_type": {
      "type": "string",
      "enum": ["theoretical", "empirical", "survey", "system", "other"]
    },
    "title": {"type": "string"},
    "abstract": {"type": "string"},
    "contributions": {
      "type": "array",
      "items": {"type": "string"}
    },
    "limitations": {
      "type": "array",
      "items": {"type": "string"}
    },
    "summary_simple": {"type": "string"},
    "quality_summary": {"type": "string"},
    "quality_scores": {
      "type": "object",
      "required": [
        "clarity",
        "problem_understanding",
        "novelty",
        "method_validity",
        "evidence_strength",
        "evaluation_quality",
        "limitations",
        "impact"
      ],
      "properties": {
        "clarity": {"type": "integer", "minimum": 1, "maximum": 5},
        "problem_understanding": {"type": "integer", "minimum": 1, "maximum": 5},
        "novelty": {"type": "integer", "minimum": 1, "maximum": 5},
        "method_validity": {"type": "integer", "minimum": 1, "maximum": 5},
        "evidence_strength": {"type": "integer", "minimum": 1, "maximum": 5},
        "evaluation_quality": {"type": "integer", "minimum": 1, "maximum": 5},
        "limitations": {"type": "integer", "minimum": 1, "maximum": 5},
        "impact": {"type": "integer", "minimum": 1, "maximum": 5}
      },
      "additionalProperties": false
    },
    "quality_flags": {
      "type": "array",
      "items": {"type": "string"}
    },
    "methods": {
      "type": "array",
      "items": {"type": "string"}
    },
    "datasets": {
      "type": "array",
      "items": {"type": "string"}
    },
    "results": {
      "type": "array",
      "items": {"type": "string"}
    },
    "evidence": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["quote"],
        "properties": {
          "quote": {"type": "string"},
          "location": {"type": "string"}
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
